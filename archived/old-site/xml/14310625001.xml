        <placeName>s<ex>anc</ex>ti Peth<ex>e</ex>rss kirke</placeName> j
        <placeName>Nestw<ex>et</ex></placeName>
      <persName>He<ex>m</ex>mi<ex>n</ex>g Laure<ex>n</ex>tss<ex>øn</ex></persName> burghemæst<ex>er</ex>
      <persName>Hemi<ex>n</ex>g Sappe</persName>
      <persName>Mawens Sm<ex>et</ex></persName>
      <persName>Peth<ex>e</ex>r Gulsm<ex>et</ex></persName> / <persName>Jesse
